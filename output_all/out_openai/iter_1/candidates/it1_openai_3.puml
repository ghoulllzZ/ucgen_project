@startuml
actor User

usecase "启动软件" as UC1
usecase "创建图形" as UC2
usecase "选择图形" as UC3
usecase "删除图形" as UC4
usecase "改变图形尺寸" as UC5
usecase "移动图形" as UC6
usecase "创建图层" as UC7
usecase "管理图层" as UC8

User -> UC1
User -> UC2
User -> UC3
User -> UC4
User -> UC5
User -> UC6
User -> UC7
User -> UC8

' 创建图形功能包含启动软件
UC2 ..> UC1 : <<include>>

' 删除图形前必须选择图形
UC4 ..> UC3 : <<include>>

' 在特定条件下可以扩展修改图形尺寸
UC5 --|> UC2 : <<extend>> (当图形已被创建时)

' 在特定条件下可以扩展移动图形
UC6 --|> UC3 : <<extend>> (当图形被选择时)

' 创建图层功能包含管理图层功能
UC7 ..> UC8 : <<include>>

@enduml
